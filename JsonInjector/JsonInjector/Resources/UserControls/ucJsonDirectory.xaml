<UserControl x:Class="JsonInjector.Resources.UserControls.ucJsonDirectory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JsonInjector.Resources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <TextBox Text="{Binding Directory}" IsReadOnly="True" HorizontalAlignment="Left" Width="778"/>
        <Button Content="X" HorizontalAlignment="Right" Width="22" Name="btnRemove" Click="btnRemove_Click"/>
    </Grid>
</UserControl>
